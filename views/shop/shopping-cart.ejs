<% include ../partials/header %>

<% if(!products || totalPrice==0){ %>
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6"><!--col-md-offset-3-->
            <h2>No items in cart</h2>
        </div>
    </div>
<% } else if(products){ %>
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6"><!--col-md-offset-3-->
            <ul class="list-group">
                <% products.forEach(function(product){ %>
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-6">
                                <strong><%= product.item.title %></strong>
                        <span class="label label-success">â‚¹ <%= product.price %></span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/reduce/<%= product.item._id %>">Reduce by 1</a></li>
                                <li><a href="/increase/<%= product.item._id %>">Increase by 1</a></li>
                                <li><a href="/remove/<%= product.item._id %>">Remove all</a></li>
                            </ul>
                        </div>
                            </div>
                            <div style="text-align: end;" class="col-md-6">
                                <span class="badge badge-pill badge-primary"><%= product.qty %></span>
                            </div>
                        </div>
                        <!-- <span><img src="<%= product.item.image %>"></span> -->
                        
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6"><!--col-md-offset-3-->
            <strong>Total: <%= totalPrice %> </strong>
        </div>
    </div>
    <hr>
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6"><!--col-md-offset-3-->
            <a href="/checkout" ><button type="button" class="btn btn-success" >Checkout</button></a>
        </div>
    </div>
<% } %>


<% include ../partials/footer %>
