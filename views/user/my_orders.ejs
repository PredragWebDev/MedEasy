
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="/stylesheets/css/my_orders.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"> 
  </head>

<div class="container con1 payment wrapper ">
  <div class="payment-logo">
    <p>O</p>
  </div>
  <h2>My Orders</h2>

  <div class="row">
    <div class="container">
        <div id="order_detailss" class="col-lg-12">
            <div class="box">
                <p class="text-muted">If you have any questions, please feel free to <a href="/#mapp">Contact us</a>.</p>
                <hr>
                <% if(orders.length > 0){ %>
                  <div class="table-responsive">
                    <table class="table">
                    <thead>
                        <tr>
                        <th>Order Id</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle" style="font-weight:500;font-size:17px;vertical-align:center">
                      <% orders.forEach(function(order){ %>
                        <tr>
                          <th><%= order._id %></th>
                          <% 
                            var d = order.purchaseDate;
                            var date = d.getDate() + '/' + (d.getMonth()+1) + '/' + d.getFullYear();
                          %>
                          <td><%= date %></td>
                          <td>â‚¹ <%= order.cart.totalPrice %></td>
                          <% if(order.isConfirmed && order.isDelivered){ %>
                            <td><span class="badge badge-success">Delivered</span></td>
                          <% } else if(order.isConfirmed && !order.isDelivered){ %>
                            <td><span class="badge badge-info">Confirmed</span></td>
                          <% } else { %>
                            <td><span class="badge badge-warning">Order Placed</span></td>
                          <% } %>
                          <td><a href="/user/order-history/details/<%= order._id %>" class="btn btn-primary btn-sm">View</a></td>
                        </tr>
                      <% }) %>
                    </tbody>
                    </table>
                </div>
                <% } else { %>
                  <div>
                    <div style="text-align: center;font-size: 30px;font-weight: 700;" >No Orders</div>
                    <hr>
                  </div>
                <% } %>
                
            </div>
        </div>
    </div>
  </div>
</div>
  


</body>
</html>